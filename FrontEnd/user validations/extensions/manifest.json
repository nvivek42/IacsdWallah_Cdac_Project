{
    "manifest_version": 2,
    "name": "My Extension",
    "version": "1.0",
    "description": "Description of my extension",
    "permissions": [
      "storage",
      "activeTab"
    ],
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["contentScript.js"]
      }
    ]
  }
  